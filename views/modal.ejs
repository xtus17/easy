<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/iconNotification.png" type="image/x-icon" />
    <title>EasySOS App</title>
    <link rel="icon" href="/iconNotification.png" type="image/x-icon" />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="EasySOS App - Plataforma de Alerta Ciudadana"
    />
    <meta
      name="keywords"
      content="EasySOS App, alertas, seguridad ciudadana, emergencias"
    />
    <meta name="author" content="Xaler" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="URL DE TU SITIO" />
    <meta
      property="og:title"
      content="EasySOS App - Plataforma de Alerta Ciudadana"
    />
    <meta
      property="og:description"
      content="Envía alertas ciudadanas de manera rápida y sencilla con EasySOS App."
    />
    <meta property="og:image" content="URL DE UNA IMAGEN REPRESENTATIVA" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="URL DE TU SITIO" />
    <meta
      property="twitter:title"
      content="EasySOS App - Plataforma de Alerta Ciudadana"
    />
    <meta
      property="twitter:description"
      content="Envía alertas de manera rápida y sencilla con EasySOS App."
    />
    <meta property="twitter:image" content="URL DE UNA IMAGEN REPRESENTATIVA" />

    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />

    <style>
      body {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
      }

      .modal-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
      }

      .modal-content {
        width: 100%;
      }
    </style>
  </head>
  <body>
    <div class="modal-container">
      <div class="modal" id="successModal">
        <div class="modal-dialog modal-content">
          <div class="modal-header">
            <h4 class="modal-title">EasySOS App</h4>
            <button type="button" class="close" data-dismiss="modal">
              &times;
            </button>
          </div>

          <div class="modal-body">
            <% if (typeof successMessage !== 'undefined') { %>
            <p><%= successMessage %></p>
            <% } else if (typeof errorMessage !== 'undefined') { %>
            <p><%= errorMessage %></p>
            <% } %>
          </div>

          <div class="modal-footer">
            <button
              type="button"
              class="<%= typeof successMessage !== 'undefined' ? 'btn btn-success' : 'btn btn-danger' %>"
              data-dismiss="modal"
              onclick="redirectToIndex()"
            >
              Cerrar
            </button>
          </div>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
      $(document).ready(function () {
        $("#successModal").modal("show");
      });

      function redirectToIndex() {
        window.location.href = "/";
      }
    </script>
  </body>
</html>
